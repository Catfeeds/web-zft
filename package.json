{
	"name": "zft",
	"version": "1.0.0",
	"author": "insane <luojie@medlinker.com>",
	"scripts": {
		"dev": "blade dev",
		"build": "blade build",
		"lint": "eslint . --ext .js,.vue --fix",
		"test": "jest"
	},
	"dependencies": {
		"blade-scripts": "~1.2.13",
		"calculatorjs": "^1.0.0",
		"date-fns": "^1.29.0",
		"echarts": "^4.0.2",
		"element-ui": "^2.4.0",
		"humanize-duration": "^3.12.0",
		"js-md5": "^0.7.3",
		"when": "^3.7.8",
		"xlsx": "^0.13.1"
	},
	"devDependencies": {
		"@vue/test-utils": "^1.0.0-beta.19",
		"babel-core": "^6.26.3",
		"babel-jest": "^23.4.0",
		"eslint": "^4.19.1",
		"eslint-plugin-html": "^4.0.0",
		"eslint-plugin-jest": "^21.3.2",
		"eslint-plugin-vue": "^3.14.0",
		"jest": "^23.4.1",
		"jest-vue-preprocessor": "^1.3.1",
		"pre-push": "^0.1.1",
		"vue-test-utils": "^1.0.0-beta.5"
	},
	"prettier": {
		"tabWidth": 4,
		"useTabs": true,
		"singleQuote": true
	},
	"babel": {
		"env": {
			"test": {
				"presets": [
					"env"
				]
			}
		},
		"presets": [
			"env"
		]
	},
	"pre-push": {
		"run": "test"
	},
	"jest": {
		"collectCoverageFrom": [
			"**/*.{js,jsx,vue}",
			"!**/node_modules/**",
			"!**/vendor/**"
		],
		"moduleFileExtensions": [
			"js",
			"json",
			"vue",
			"less"
		],
		"moduleNameMapper": {
			"^~(.*)$": "<rootDir>/$1",
			"^vue$": "vue/dist/vue.common.js"
		},
		"moduleDirectories": [
			"node_modules",
			"node_modules/blade-scripts/node_modules"
		],
		"transform": {
			".*\\.vue$": "<rootDir>/node_modules/jest-vue-preprocessor",
			"^.+\\.js$": "<rootDir>/node_modules/babel-jest"
		}
	}
}
